@model List<TicariOtomasyon.Models.Entities.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departmanlara Göre Personel Dağılımı</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sayac = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@sayac</td>
                        <td>@item.Departman</td>
                        <td>
                            @if (item.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (item.Sayi >= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-default">@item.Sayi</span></td>
                    </tr>
                    sayac++;
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>