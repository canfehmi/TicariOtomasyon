@model IEnumerable<TicariOtomasyon.Models.Entities.SinifGrup>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Müşteri Şehir Tablosu</h3>

        <div class="card-tools">
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Şehir</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int siraNo = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@siraNo</td>
                        <td>@item.Sehir</td>
                        <td>
                            @if (item.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (item.Sayi >= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-light">@item.Sayi</span></td>
                    </tr>
                    siraNo++;
                }
            </tbody>
        </table>
    </div>
</div>