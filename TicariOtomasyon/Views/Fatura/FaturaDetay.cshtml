@using TicariOtomasyon.Models.Entities
@model List<FaturaKalem>
@{
    ViewData["Title"] = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Fatura Detay Sayfası</h1>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.fatura Nolu Fatura</li>
</ol>
<div class="row justify-content-between">
    <div class="col-4">
        <a class="btn btn-primary" href="/Fatura/Index/">Faturalara Geri Dön</a>
    </div>
    <div class="col-4 flex-row-reverse d-flex">
        <a class="btn btn-success" href="/Fatura/KalemEkle/">Yeni Kalem Girişi</a>
    </div>
</div>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Aciklama</td>
            <td>@item.Miktar</td>
            <td>@item.BirimFiyat</td>
            <td>@item.Tutar</td>
        </tr>
    }
</table>