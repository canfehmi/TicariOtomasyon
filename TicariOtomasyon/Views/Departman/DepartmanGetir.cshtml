@model TicariOtomasyon.Models.Entities.Departman
@{
    ViewData["Title"] = "DepartmanGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Departman Güncelleme</h1>
<br />
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Departman Adı:")
        @Html.TextBoxFor(a => a.DepartmanAdi, new { @class = "form-control" })
        @Html.HiddenFor(a => a.Id)
    </div>
    <button class="btn btn-warning">Güncelle</button>
}